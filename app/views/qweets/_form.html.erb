<%= form_for [@user, @qweet] do |f| %>
  <div class="">
    <h3>User Name: <%= @user.name %></h3>
  </div>
  <div class="">
    <% if @qweet.errors.any? %>
      <ul>
        <% @qweet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div>
    <%= f.label :content %>
    <br>
    <%= f.text_area :content, rows: "5" %>
  </div>
  <p>
    Max 256 char
  </p>

  <%= f.submit %>
<% end %>
<br>
