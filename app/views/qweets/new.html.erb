<h1>Compose a Qweet</h1>
<h3>User Name: <%= @user.name %></h3>

<% if @qweet.errors.any? %>
  <ul>
    <% @qweet.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for [@user, @qweet] do |f| %>



<div>
  <%= f.label :content %>
  <br>
  <%= f.text_area :content, rows: "5" %>
</div>
<p>
  Max 256 char
</p>

<%= f.submit %>
<% end %>


<%= link_to 'Edit User', edit_user_path(@user) %> |
<%= link_to 'Back', users_path(@user) %>
