<div>
  <h3>Name: <%= @user.name %></h3>

  <span><%= @user.followers.count %> Followers</span>
  <span><%= @user.followeds.count %> Following</span>
  <br>


  Qweet Count: <%= @user.qweets.size %><br>
  <%= link_to 'Compose New Qweet', new_user_qweet_path(@user) if @user == current_user %>
<ul>
  <% @user.qweets.each do |qweet| %>
    <li><%= qweet.content %></li>
    <%= link_to 'Qweet details', user_qweet_path(@user, qweet) %>
  <% end %>
</ul>

</div>

<%  if @user == current_user %>
<%= link_to 'Edit User', edit_user_path(@user)%> |
<% end %>
<%= link_to 'Back', users_path %>
